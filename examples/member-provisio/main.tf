terraform {
  required_version = ">= 1.0.0"

  required_providers {
    aws = {
      source                = "hashicorp/aws"
      version               = ">= 4.0"
      configuration_aliases = []
    }
  }
}


# ---------------------------------------------------------------------------------------------------------------------
# ¦ MODULE
# ---------------------------------------------------------------------------------------------------------------------
module "member" {
  source = "./rendered"

  providers = {
    aws              = aws.workload
    aws.eu_central_1 = aws.workload
    aws.us_east_2    = aws.workload_use2
  }
}
